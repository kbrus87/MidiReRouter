{
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, // Opcional pero recomendable
    "baseUrl": "./src",
    "paths": {
      "components/*": ["components/*"],
      "juce": ["./src/juce/index.js"],
      "assets/*": ["assets/*"]
    },
    "jsx": "react",
    "target": "es5",
    "lib": ["dom", "es2015", "es2017"],
    "outDir": "./dist",
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
